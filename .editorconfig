; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF

[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yml.dist}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
